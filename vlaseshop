    <script>
        // –ì–ª–æ–±–∞–ª—å–Ω—ã–µ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã–µ
        let cart = [];
        let cartCount = 0;
        let favorites = [];
        let lastScrollTop = 0;
        let isSearchActive = false;

        // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –ø–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏—è —Å—Ç—Ä–∞–Ω–∏—Ü
        function showPage(pageId) {
            // –°–∫—Ä—ã—Ç—å –≤—Å–µ —Å—Ç—Ä–∞–Ω–∏—Ü—ã
            document.querySelectorAll('.page-section').forEach(page => {
                page.classList.remove('active');
            });
            
            // –ü–æ–∫–∞–∑–∞—Ç—å –≤—ã–±—Ä–∞–Ω–Ω—É—é —Å—Ç—Ä–∞–Ω–∏—Ü—É
            document.getElementById(pageId).classList.add('active');
            
            // –û–±–Ω–æ–≤–∏—Ç—å –∞–∫—Ç–∏–≤–Ω—É—é –∫–Ω–æ–ø–∫—É –≤ –Ω–∏–∂–Ω–µ–π –Ω–∞–≤–∏–≥–∞—Ü–∏–∏
            document.querySelectorAll('.nav-item').forEach(item => {
                item.classList.remove('active');
            });
            document.querySelector(`[data-page="${pageId}"]`).classList.add('active');

            // –û–±–Ω–æ–≤–∏—Ç—å –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏–µ –µ—Å–ª–∏ –Ω—É–∂–Ω–æ
            if (pageId === 'cart-page') {
                updateCartDisplay();
            } else if (pageId === 'favorites-page') {
                updateFavoritesDisplay();
            }

            // –ï—Å–ª–∏ –æ—Ç–∫—Ä—ã–ª–∏ –∫–∞—Ç–∞–ª–æ–≥ - –ø–æ–∫–∞–∑–∞—Ç—å –ø–æ–∏—Å–∫
            if (pageId === 'catalog-page') {
                setTimeout(() => {
                    const catalogSearch = document.getElementById('catalogSearch');
                    catalogSearch.classList.remove('hidden');
                }, 100);
            }

            // –ï—Å–ª–∏ –æ—Ç–∫—Ä—ã–ª–∏ –≥–ª–∞–≤–Ω—É—é - —Å–±—Ä–æ—Å–∏—Ç—å –ø–æ–∏—Å–∫
            if (pageId === 'home-page') {
                closeSearch();
            }
        }

        // –§—É–Ω–∫—Ü–∏—è –¥–ª—è —Å–∫—Ä–æ–ª–ª–∞ –∫ —Å–µ–∫—Ü–∏–∏ (—Ä–∞–±–æ—Ç–∞–µ—Ç —Ç–æ–ª—å–∫–æ –Ω–∞ –≥–ª–∞–≤–Ω–æ–π)
        function scrollToSection(sectionId) {
            if (document.getElementById('home-page').classList.contains('active')) {
                const element = document.getElementById(sectionId);
                if (element) {
                    element.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            } else {
                // –ï—Å–ª–∏ –Ω–µ –Ω–∞ –≥–ª–∞–≤–Ω–æ–π, –ø–µ—Ä–µ—Ö–æ–¥–∏–º –Ω–∞ –≥–ª–∞–≤–Ω—É—é –∏ –ø–æ—Ç–æ–º —Å–∫—Ä–æ–ª–ª–∏–º
                showPage('home-page');
                setTimeout(() => {
                    const element = document.getElementById(sectionId);
                    if (element) {
                        element.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                }, 100);
            }
        }

        // –§—É–Ω–∫—Ü–∏—è —Ñ–∏–ª—å—Ç—Ä–∞—Ü–∏–∏ –ø–æ –∫–∞—Ç–µ–≥–æ—Ä–∏—è–º
        function filterCategory(category) {
            const productCards = document.querySelectorAll('.catalog-grid .product-card');
            const categoryButtons = document.querySelectorAll('.category-btn');
            
            // –û–±–Ω–æ–≤–ª—è–µ–º –∞–∫—Ç–∏–≤–Ω—É—é –∫–Ω–æ–ø–∫—É
            categoryButtons.forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');
            
            // –§–∏–ª—å—Ç—Ä—É–µ–º —Ç–æ–≤–∞—Ä—ã
            productCards.forEach(card => {
                const cardCategories = card.getAttribute('data-category');
                if (category === 'all' || cardCategories.includes(category)) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        }

        // –§—É–Ω–∫—Ü–∏—è –ø–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏—è –ø–æ–∏—Å–∫–∞ –Ω–∞ –≥–ª–∞–≤–Ω–æ–π
        function toggleSearch() {
            const searchBar = document.getElementById('searchBar');
            const catalogBtn = document.getElementById('catalogBtn');
            const searchInput = document.getElementById('searchInput');

            if (!isSearchActive) {
                // –ê–∫—Ç–∏–≤–∏—Ä—É–µ–º –ø–æ–∏—Å–∫
                searchBar.classList.add('active');
                catalogBtn.classList.add('hidden');
                searchInput.focus();
                isSearchActive = true;
            } else {
                // –í—ã–ø–æ–ª–Ω—è–µ–º –ø–æ–∏—Å–∫ –µ—Å–ª–∏ –µ—Å—Ç—å —Ç–µ–∫—Å—Ç
                performSearch();
            }
        }

        // –§—É–Ω–∫—Ü–∏—è –∑–∞–∫—Ä—ã—Ç–∏—è –ø–æ–∏—Å–∫–∞
        function closeSearch() {
            const searchBar = document.getElementById('searchBar');
            const catalogBtn = document.getElementById('catalogBtn');
            const searchInput = document.getElementById('searchInput');

            searchBar.classList.remove('active');
            catalogBtn.classList.remove('hidden');
            searchInput.value = '';
            isSearchActive = false;
        }

        // –§—É–Ω–∫—Ü–∏—è –ø–æ–∏—Å–∫–∞ –Ω–∞ –≥–ª–∞–≤–Ω–æ–π
        function performSearch() {
            const searchTerm = document.getElementById('searchInput').value;
            if (searchTerm.trim()) {
                // –ü–µ—Ä–µ—Ö–æ–¥–∏–º –≤ –∫–∞—Ç–∞–ª–æ–≥ –∏ –≤—ã–ø–æ–ª–Ω—è–µ–º –ø–æ–∏—Å–∫
                showPage('catalog-page');
                document.getElementById('catalogSearchInput').value = searchTerm;
                filterCatalog(searchTerm);
                closeSearch();
            }
        }

        // –§—É–Ω–∫—Ü–∏—è –ø–æ–∏—Å–∫–∞ –≤ –∫–∞—Ç–∞–ª–æ–≥–µ
        function performCatalogSearch() {
            const searchTerm = document.getElementById('catalogSearchInput').value;
            filterCatalog(searchTerm);
        }

        // –§—É–Ω–∫—Ü–∏—è —Ñ–∏–ª—å—Ç—Ä–∞—Ü–∏–∏ –∫–∞—Ç–∞–ª–æ–≥–∞
        function filterCatalog(searchTerm) {
            const productCards = document.querySelectorAll('.catalog-grid .product-card');
            const searchLower = searchTerm.toLowerCase();

            productCards.forEach(card => {
                const brand = card.querySelector('.product-brand').textContent.toLowerCase();
                const title = card.querySelector('.product-title').textContent.toLowerCase();
                const category = card.querySelector('.product-category').textContent.toLowerCase();
                const text = brand + ' ' + title + ' ' + category;

                if (text.includes(searchLower)) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        }

        // –§—É–Ω–∫—Ü–∏—è –¥–æ–±–∞–≤–ª–µ–Ω–∏—è –≤ –∫–æ—Ä–∑–∏–Ω—É —Å –∞–Ω–∏–º–∞—Ü–∏–µ–π
        function addToCartWithAnimation(productElement, itemType) {
            const productCard = productElement.closest('.product-card');
            const brand = productCard.querySelector('.product-brand').textContent;
            const title = productCard.querySelector('.product-title').textContent;
            const price = parseInt(productCard.querySelector('.product-price').textContent.replace(/[^\d]/g, ''));
            const image = productCard.querySelector('.product-image').src;

            // –°–æ–∑–¥–∞–µ–º –ª–µ—Ç–∞—é—â–∏–π —ç–ª–µ–º–µ–Ω—Ç
            createFlyingItem(productElement, itemType);

            // –î–æ–±–∞–≤–ª—è–µ–º –≤ –∫–æ—Ä–∑–∏–Ω—É
            const existingItem = cart.find(item => item.title === title);
            
            if (existingItem) {
                existingItem.quantity += 1;
            } else {
                cart.push({
                    brand,
                    title,
                    price,
                    image,
                    quantity: 1
                });
            }

            // –û–±–Ω–æ–≤–ª—è–µ–º —Å—á–µ—Ç—á–∏–∫ –∫–æ—Ä–∑–∏–Ω—ã
            cartCount++;
            updateCartCounter();

            // –í–∏–∑—É–∞–ª—å–Ω–∞—è –æ–±—Ä–∞—Ç–Ω–∞—è —Å–≤—è–∑—å
            productElement.textContent = '–î–æ–±–∞–≤–ª–µ–Ω–æ!';
            productElement.style.background = 'linear-gradient(135deg, #2ed573, #27ae60)';
            
            setTimeout(() => {
                productElement.textContent = '–í –∫–æ—Ä–∑–∏–Ω—É';
                productElement.style.background = 'linear-gradient(135deg, rgba(255,165,0,0.8), rgba(255,140,0,0.8))';
            }, 1000);
        }

        // –§—É–Ω–∫—Ü–∏—è —Å–æ–∑–¥–∞–Ω–∏—è –ª–µ—Ç–∞—é—â–µ–≥–æ —ç–ª–µ–º–µ–Ω—Ç–∞
        function createFlyingItem(fromElement, itemType) {
            const flyingItem = document.createElement('div');
            flyingItem.className = 'flying-item';
            
            // –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ –≤ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏ –æ—Ç —Ç–∏–ø–∞ —Ç–æ–≤–∞—Ä–∞
            const images = {
                'jacket': 'https://images.unsplash.com/photo-1556821840-3a63f95609a7?ixlib=rb-4.0.3&auto=format&fit=crop&w=100&q=80',
                'sweater': 'https://images.unsplash.com/photo-1576566588028-4147f3842f27?ixlib=rb-4.0.3&auto=format&fit=crop&w=100&q=80',
                'tshirt': 'https://images.unsplash.com/photo-1521572163474-6864f9cf17ab?ixlib=rb-4.0.3&auto=format&fit=crop&w=100&q=80',
                'pants': 'https://images.unsplash.com/photo-1542272454315-7ad49baa5de5?ixlib=rb-4.0.3&auto=format&fit=crop&w=100&q=80',
                'accessory': 'https://images.unsplash.com/photo-1548036328-c9fa89d128fa?ixlib=rb-4.0.3&auto=format&fit=crop&w=100&q=80'
            };
            
            flyingItem.style.backgroundImage = `url(${images[itemType] || images.tshirt})`;
            
            const fromRect = fromElement.getBoundingClientRect();
            const cartIcon = document.querySelector('.nav-item[data-page="cart-page"]');
            const cartRect = cartIcon.getBoundingClientRect();
            
            flyingItem.style.left = fromRect.left + 'px';
            flyingItem.style.top = fromRect.top + 'px';
            
            document.body.appendChild(flyingItem);
            
            // –ó–∞–ø—É—Å–∫–∞–µ–º –∞–Ω–∏–º–∞—Ü–∏—é
            setTimeout(() => {
                flyingItem.style.left = cartRect.left + cartRect.width / 2 + 'px';
                flyingItem.style.top = cartRect.top + cartRect.height / 2 + 'px';
            }, 10);
            
            // –£–¥–∞–ª—è–µ–º —ç–ª–µ–º–µ–Ω—Ç –ø–æ—Å–ª–µ –∞–Ω–∏–º–∞—Ü–∏–∏
            setTimeout(() => {
                flyingItem.remove();
            }, 1000);
        }

        // –§—É–Ω–∫—Ü–∏—è –ø–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏—è –∏–∑–±—Ä–∞–Ω–Ω–æ–≥–æ
        function toggleFavorite(button) {
            const productCard = button.closest('.product-card');
            const productId = productCard.querySelector('.product-title').textContent;
            
            if (button.classList.contains('active')) {
                button.classList.remove('active');
                button.textContent = '‚ô°';
                favorites = favorites.filter(item => item !== productId);
            } else {
                button.classList.add('active');
                button.textContent = '‚ô•';
                favorites.push(productId);
            }
            
            updateFavoritesCounter();
        }

        // –§—É–Ω–∫—Ü–∏—è –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è —Å—á–µ—Ç—á–∏–∫–∞ –∫–æ—Ä–∑–∏–Ω—ã
        function updateCartCounter() {
            document.getElementById('bottom-cart-count').textContent = cartCount;
        }

        // –§—É–Ω–∫—Ü–∏—è –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è —Å—á–µ—Ç—á–∏–∫–∞ –∏–∑–±—Ä–∞–Ω–Ω–æ–≥–æ
        function updateFavoritesCounter() {
            // –ú–æ–∂–Ω–æ –¥–æ–±–∞–≤–∏—Ç—å —Å—á–µ—Ç—á–∏–∫ –µ—Å–ª–∏ –Ω—É–∂–Ω–æ
        }

        // –§—É–Ω–∫—Ü–∏—è –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è –∫–æ—Ä–∑–∏–Ω—ã
        function updateCartDisplay() {
            const cartItemsContainer = document.querySelector('.cart-items');
            const totalPriceElement = document.getElementById('total-price');
            
            if (cart.length === 0) {
                cartItemsContainer.innerHTML = `
                    <div class="empty-state" style="text-align: center; color: #666; padding: 3rem; grid-column: 1 / -1;">
                        <h3 style="margin-bottom: 1rem;">–ö–æ—Ä–∑–∏–Ω–∞ –ø—É—Å—Ç–∞</h3>
                        <p>–î–æ–±–∞–≤—å—Ç–µ —Ç–æ–≤–∞—Ä—ã –∏–∑ –∫–∞—Ç–∞–ª–æ–≥–∞</p>
                    </div>
                `;
                totalPriceElement.textContent = '0';
                return;
            }

            let totalPrice = 0;
            cartItemsContainer.innerHTML = '';

            cart.forEach((item, index) => {
                const itemTotal = item.price * item.quantity;
                totalPrice += itemTotal;

                const cartItemElement = document.createElement('div');
                cartItemElement.className = 'cart-item glass';
                cartItemElement.innerHTML = `
                    <img src="${item.image}" alt="${item.title}" class="cart-item-image">
                    <div class="cart-item-info">
                        <div class="product-brand">${item.brand}</div>
                        <h3 class="product-title">${item.title}</h3>
                        <div class="product-price">${item.price.toLocaleString()} ‚ÇΩ √ó ${item.quantity}</div>
                    </div>
                    <div class="cart-item-price">${itemTotal.toLocaleString()} ‚ÇΩ</div>
                    <button class="remove-from-cart" onclick="removeFromCart(${index})">‚úï</button>
                `;
                cartItemsContainer.appendChild(cartItemElement);
            });

            totalPriceElement.textContent = totalPrice.toLocaleString();
        }

        // –§—É–Ω–∫—Ü–∏—è –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è –∏–∑–±—Ä–∞–Ω–Ω–æ–≥–æ
        function updateFavoritesDisplay() {
            const favoritesContainer = document.querySelector('.favorites-grid');
            // –ó–¥–µ—Å—å –º–æ–∂–Ω–æ –¥–æ–±–∞–≤–∏—Ç—å –ª–æ–≥–∏–∫—É –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è –∏–∑–±—Ä–∞–Ω–Ω—ã—Ö —Ç–æ–≤–∞—Ä–æ–≤
        }

        // –§—É–Ω–∫—Ü–∏—è —É–¥–∞–ª–µ–Ω–∏—è —Ç–æ–≤–∞—Ä–∞ –∏–∑ –∫–æ—Ä–∑–∏–Ω—ã
        function removeFromCart(index) {
            cartCount -= cart[index].quantity;
            cart.splice(index, 1);
            updateCartCounter();
            updateCartDisplay();
        }

        // –§—É–Ω–∫—Ü–∏—è –¥–ª—è —Å–∫—Ä—ã—Ç–∏—è/–ø–æ–∫–∞–∑–∞ –ø–æ–∏—Å–∫–∞ –≤ –∫–∞—Ç–∞–ª–æ–≥–µ –ø—Ä–∏ —Å–∫—Ä–æ–ª–ª–µ
        function handleCatalogScroll() {
            const catalogSearch = document.getElementById('catalogSearch');
            if (!catalogSearch) return;

            const st = window.pageYOffset || document.documentElement.scrollTop;
            
            if (st > lastScrollTop && st > 50) {
                // –°–∫—Ä–æ–ª–ª –≤–Ω–∏–∑
                catalogSearch.classList.add('hidden');
            } else if (st < lastScrollTop) {
                // –°–∫—Ä–æ–ª–ª –≤–≤–µ—Ä—Ö
                catalogSearch.classList.remove('hidden');
            }
            
            lastScrollTop = st <= 0 ? 0 : st;
        }

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ —Å—Ç—Ä–∞–Ω–∏—Ü—ã
        document.addEventListener('DOMContentLoaded', function() {
            // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –¥–ª—è –Ω–∏–∂–Ω–µ–π –Ω–∞–≤–∏–≥–∞—Ü–∏–∏
            document.querySelectorAll('.nav-item').forEach(item => {
                item.addEventListener('click', function() {
                    const pageId = this.getAttribute('data-page');
                    showPage(pageId);
                });
            });

            // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ —Å–∫—Ä–æ–ª–ª–∞ –¥–ª—è –∫–∞—Ç–∞–ª–æ–≥–∞
            window.addEventListener('scroll', handleCatalogScroll);

            // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ Enter –¥–ª—è –ø–æ–∏—Å–∫–∞
            document.getElementById('searchInput')?.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    performSearch();
                }
            });

            document.getElementById('catalogSearchInput')?.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    performCatalogSearch();
                }
            });

            // –ó–∞–∫—Ä—ã—Ç–∏–µ –ø–æ–∏—Å–∫–∞ –ø—Ä–∏ –∫–ª–∏–∫–µ –≤–Ω–µ –æ–±–ª–∞—Å—Ç–∏
            document.addEventListener('click', function(e) {
                const searchContainer = document.querySelector('.search-container');
                const searchBar = document.getElementById('searchBar');
                
                if (isSearchActive && searchContainer && !searchContainer.contains(e.target)) {
                    closeSearch();
                }
            });
        });
    </script>
</body>
</html>
